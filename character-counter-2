  <script>
  function showResults(){
   var typedText = document.getElementById("typeText").value;
   var titleMode = document.getElementById("Title-Option").checked;
   var descMode = document.getElementById("Desc-Option").checked;
//Display characters in title mode
   if(titleMode==1){
     if(typedText.length < 70){
      results.innerHTML = "<span>" + typedText.length + "</span>"
      }
     if(typedText.length >= 70){
     results.innerHTML = "<span style='background-color: #F10000;'> " + typedText.length + " </span>"
    }
   }
//Display words in description mode
//This code will only count the spaces, so it's not fully reliable yet
   if(descMode==1){
    var numWords = 0;
        if (typedText == "") {
            numWords = 0;
        } else if ((typedText.substring(typedText.length - 1, typedText.length) == "?") || (typedText.substring(typedText.length - 1, typedText.length) == "!") || (typedText.substring(typedText.length - 1, typedText.length) == " ") || (typedText.substring(typedText.length - 1, typedText.length) == ".")) {
            numWords = typedText.replace(/(\.|!|\?| )+|(\.|!|\?| )+$|(\.|!|\?| )+/g, "#").split("#").length - 1;
        } else {
            numWords = typedText.replace(/(\.|!|\?| )+|(\.|!|\?| )+$|(\.|!|\?| )+/g, "#").split("#").length;
        }
   if(numWords < 250){
    results.innerHTML = "<span>" + numWords + "</span>";
    }
   if(numWords >= 250){
    results.innerHTML = "<span style='background-color: #F10000;'> " + numWords + " </span>";
   }
  }
 }
  function clearText(){
   document.getElementById("typeText").value = ""
   results.innerHTML = "<span>0</span>"
    }
  function colorChange(){
    var changeSwitch = document.getElementById("dark-light").value;
    var main = document.body;
    var titleText = document.getElementById("typeText");
    var header = document.getElementById("header");
    if(changeSwitch==0){
     main.className = "body-light-mode"
     titleText.className = "light-mode"
     header.className = "header-light"
    }
    if(changeSwitch==1){
     main.className = "dark-mode-body"
     titleText.className = "dark-mode"
     header.className = "header-dark"
    }
  }
  function TitleDesc() {
   var titleMode = document.getElementById("Title-Option").checked;
   var descMode = document.getElementById("Desc-Option").checked;
   var textBox = document.getElementById("textBox");
   var prodDesc = document.getElementById("prodDesc");
   var countElement = document.getElementById("countElement");
   var changeSwitch = document.getElementById("dark-light").value;
   var currentText = document.getElementById("typeText").value;
   if(descMode==1){
     if(changeSwitch==0){
      textBox.innerHTML = "<textarea class='light-mode' id='typeText' maxlength='100000' onkeyup='showResults()' style='height: 394px; width: 1099px;'></textarea>";
      document.getElementById("typeText").value = currentText
      }
      if(changeSwitch==1){
       textBox.innerHTML = "<textarea class='dark-mode' id='typeText' maxlength='100000' onkeyup='showResults()' style='height: 394px; width: 1099px;'></textarea>";
        document.getElementById("typeText").value = currentText
      }
     prodDesc.innerHTML = "<span><h1 align=center>Enter Product Description:</h1></span>";
     countElement.innerHTML = "Word Count: ";
     showResults();
    }
   if(titleMode==1){
     if(changeSwitch==0){
      textBox.innerHTML = "<textarea class='light-mode' id='typeText' maxlength='100' onkeyup='showResults()' style='height: calc(100% - 180px);'></textarea>";
       document.getElementById("typeText").value = currentText
     }
     if(changeSwitch==1){
      textBox.innerHTML = "<textarea class='dark-mode' id='typeText' maxlength='100' onkeyup='showResults()' style='height: calc(100% - 180px);'></textarea>";
      document.getElementById("typeText").value = currentText
      }
     prodDesc.innerHTML = "<span><h1 align=center>Enter Product Title:</h1></span>";
     countElement.innerHTML = "Character Count: ";
     showResults();
   }
  }
  </script>
